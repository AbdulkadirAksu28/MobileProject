<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mobile_Project_Abdulkadir_Aksu.Views.ItemDetailPage"
             Title="{Binding Title}">

    <StackLayout Spacing="20" Padding="15">
        <Label Style="{StaticResource BodyText}" Text="Text:"/>
        <Label Style="{StaticResource SubtitleText}" Text="{Binding Text}"/>
        <Label Style="{StaticResource BodyText}" Text="Description:"/>
        <Label Style="{StaticResource SubtitleText}" Text="{Binding Description}"/>
        <Label Style="{StaticResource BodyText}" Text="URL:"/>
        <Label Style="{StaticResource SubtitleText}" Text="{Binding URL}"/>
    </StackLayout>
    
</ContentPage>